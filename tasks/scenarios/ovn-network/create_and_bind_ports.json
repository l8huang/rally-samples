{
    "version": 2,
    "title": "Create and bind port",
    "subtasks": [
        {
            "title": "Create and bind port",
            "workloads": [
                {
                    "name": "OvnNetwork.create_and_bind_ports",
                    "args": {
                        "network_create_args": {
                            "amount": 1
                        },
                        "port_create_args" : {
                            "wait_up": true
                        },
                        "ports_per_network": 10
                    },
                    "runner": {
                        "type": "serial",
                        "times": 1,
                        "concurrency": 4,
                        "max_cpu_count": 2
                    },
                    "context": {
                       "ovn_multihost" : {
                            "controller": "ovn-controller-node"
                        },
                        "sandbox":{ "tag": "ToR2"}
                    }
                }
            ]
        }
    ]
}
